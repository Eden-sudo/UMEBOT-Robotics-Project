<?xml version="1.0" encoding="utf-8"?>
<!-- Define una forma rectangular que se usará como fondo para las burbujas de chat. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de relleno sólido para la burbuja del robot. -->
    <solid android:color="#BBDEFB"/> <!-- Un azul claro -->

    <!--
    Define las esquinas redondeadas. Se personaliza cada esquina para crear el
    efecto de "cola" de la burbuja. La esquina superior izquierda es menos redondeada.
    -->
    <corners android:radius="16dp"
        android:topLeftRadius="4dp"
        android:topRightRadius="16dp"
        android:bottomLeftRadius="16dp"
        android:bottomRightRadius="16dp"/>
</shape>


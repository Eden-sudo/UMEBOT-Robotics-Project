<?xml version="1.0" encoding="utf-8"?>
<!-- Contenedor principal para un solo item de la lista de gamepads. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    <!-- Atributos para que el item tenga un efecto visual al ser presionado. -->
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- TextView para mostrar el nombre del gamepad (ej. "Xbox Wireless Controller"). -->
    <TextView
        android:id="@+id/textview_gamepad_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:text="Nombre del Gamepad" />

    <!-- TextView para mostrar la dirección MAC del gamepad, que actúa como su ID único. -->
    <TextView
        android:id="@+id/textview_gamepad_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceCaption"
        android:text="AA:BB:CC:DD:EE:FF" />
</LinearLayout>

